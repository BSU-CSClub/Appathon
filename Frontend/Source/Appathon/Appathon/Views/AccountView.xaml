<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Appathon.AccountView">
	<ContentView.Content>
		<StackLayout>
			<Label Text="Username" 
				HorizontalOptions="Center"
				FontSize="30"/>
			<Button Text="My Posts" Command="{Binding NavigateMyPostsCommand}" />
			<Button Text="My Upvotes" Command="{Binding NavigateMyUpvotesCommand}" />
			<Button Text="Notifications" />
			<!-- test -->

			<Button Text="Logout" Command="{Binding LogoutCommand}" />
		</StackLayout>
	</ContentView.Content>
</ContentView>
